<section>
    <div>
        {{#if isEditing}}
            <label for="formula-input">
                Input your formula:
            </label>
            <input type="text" id="formula-input" enterkeyhint="done">
        {{else}}
            <pre><code>x &wedge; y</code></pre>
        {{/if}}
        <menu>
            <button onclick="toggleVisualization(this)">
                <img src="icons/eye.svg" class="icon">
            </button>
            <div class="spacer"></div>
            {{#if isEditing}}
                <button class="selected">
                    <img src="icons/text.svg" class="icon">
                </button>
                <button>
                    <img src="icons/graph.svg" class="icon">
                </button>
            {{else}}
                <button onclick="editSection(this)" class="selected">
                    <img src="icons/pencil.svg" class="icon">
                </button>
                <button onclick="deleteSection(this)">
                    <img src="icons/trash.svg" class="icon">
                </button>
            {{/if}}
        </menu>
    </div>
    <aside>
        <figure>
            <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                <pattern height="4" id="hatch" patternUnits="userSpaceOnUse" width="4">
                    <rect fill="white" height="4" width="4"></rect>
                    <path d="M-1,1 l2,-2
                                        M0,4 l4,-4
                                        M3,5 l2,-2" style="stroke:gray; stroke-width:1"></path>
                </pattern>
                <rect fill="white" height="100%" stroke="black" stroke-width="1" width="100%"></rect>
                <g transform="translate(50, 50)">
                    <circle cx="-12.5" cy="0" fill="url(#hatch)" r="25" stroke="black" stroke-width="1">
                    </circle>
                    <circle cx="12.5" cy="0" fill="url(#hatch)" r="25" stroke="black" stroke-width="1"></circle>
                    <path
                        d="M0.0000000000000039771572,21.650635 a25,25,0,0,0,-0.0000000000000079543145,-43.30127 A25,25,0,0,0,0.0000000000000039771572,21.650635"
                        fill="url(#hatch)" stroke="black" stroke-width="1"></path>
                    <g>
                        <rect fill="white" height="8" rx="1" ry="1" stroke="black" stroke-width="0.25" width="8"
                            x="-27.4375" y="-4"></rect>
                        <text dominant-baseline="middle" fill="black"
                            font-family="&quot;andale mono&quot;, monospace" font-size="7" text-anchor="middle"
                            x="-23.4375" y="0">
                            x
                        </text>
                    </g>
                    <g>
                        <rect fill="white" height="8" rx="1" ry="1" stroke="black" stroke-width="0.25" width="8"
                            x="19.4375" y="-4">
                        </rect>
                        <text dominant-baseline="middle" fill="black"
                            font-family="&quot;andale mono&quot;, monospace" font-size="7" text-anchor="middle"
                            x="23.4375" y="0">
                            y
                        </text>
                    </g>
                </g>
            </svg>
        </figure>
    </aside>
</section>